  !!! 5
  html
    head
      title 2pay Prototype
      link(rel='stylesheet', href='/css/main.css')
      link(rel='stylesheet', href='/css/font-awesome.css')
      script(src='/js/jquery-2.0.3.min.js')
      script(src='/js/scalpel-0.2.1.min.js')
    body
      #notices
        each notice in notices.get()
          div(class="notice #{notice.kind}")= notice.msg

      #header
        a.brand(href='/index.html')
          img(src='/img/logo.png', alt='2pay.co.in')
        .nav
          if (user)
            a#user-nav.active
              i.icon-user.smooth
              span #{user.name}
            a#merchant-nav
              i.icon-building.smooth
              span #{merchants[0].title}
          else
            a(href="/registration")= __("Registration")
            a(href="/login")= __("Login")
      #content
        if (user)
          #sidenav
            block sidenav
          #main
            block main
        else
          #main-not-login
            block main

