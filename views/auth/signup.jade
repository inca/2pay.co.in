extends ../layout

block form
  .frame
    .paper.pad
      form.partial.validate(method="post", action="/signup")
        .row
          .span-3.no-mobile-screen
            i.icon-user.icon-large
          .span-9
            .ctl-row
              label
                span Имя пользователя
                input.field(
                type="text",
                name="user[name]",
                required='required',
                minlength='4')
            .ctl-row
              label
                span Пароль
                input.field(
                type="password",
                name="user[password]",
                required='required',
                minlength='8')
            .ctl-row
              label
                span Адрес электронной почты
                input.field(
                type="email",
                name="user[email]")
        hr
        .row
          .span-3.no-mobile-screen
            i.icon-building.icon-large
          .span-9
            .ctl-row
              label
                span Название компании продавца
                input.field(
                type="text",
                name="merchant[title]",
                required='required')

        p.centered
          button.btn.primary.large(type="submit") Регистрация

block main
  .row.mobile(data-ref="#signup")
    .span-3 &nbsp;
    .span-6
      block form
    .span-3 &nbsp;
