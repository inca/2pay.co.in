extends ../layout

block main
  .frame
    .paper.pad
      form(method="post", action="/login")
        .row
          .span-1
            i.icon-user.icon-large
          .span-5.pad-bottom
            label.descr-left(for="ue") Введите адрес электронной почты
            input.field(type="text", name="ue", id="ue")
            label.descr-left(for="up") Введите пароль
            input.field(type="password", name="up", id="up")
        button.btn.centered-block(type="submit") Войти в систему
