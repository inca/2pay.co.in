extends ../layout

block main
  .frame
    .paper.pad
      form(method="post", action="/registration")
        .row
          .span-1
            i.icon-user.icon-large
          .span-5.pad-bottom
            label.descr-left(for="un") Введите имя пользователя
            input.field(type="text", name="un", id="un")
            label.descr-left(for="up") Введите пароль
            input.field(type="password", name="up", id="up")
            label.descr-left(for="ue") Введите адрес электронной почты
            input.field(type="email", name="ue", id="ue")
          .span-5.pad-bottom
            label.descr-left(for="mn") Введите название компании продавца
            input.field(type="text", name="mn", id="mn")
          .span-1
            i.icon-building.icon-large
        button.btn.centered-block(type="submit") Регистрация