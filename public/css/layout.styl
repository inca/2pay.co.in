html, body, form, fieldset, img
  padding:0
  margin:0
  border:0

a, a:hover, a:visited
  color: #3ca9ee

body
  font-family: Helvetica Neue, Segoe UI, Arial, sans-serif;
  font-size: 16px
  line-height: 1.5em
  font-weight: 300
  background: url('/img/bg/linen.png') repeat #444

#header
  position:relative
  line-height: 40px
  &::after
    content: ''
    display: table
    clear: both
  .brand
    width:192px
    display:inline-block
    text-align:center
    img
      position:relative
      vertical-align:middle
      top: -2px
  .nav
    display:inline-block
  .nav > a
    position:relative
    display:inline-block
    color: #aaa
    text-shadow: 0 1px 1px #000
    padding: 0 16px
    margin: 0 8px
    text-align: center
    text-decoration: none
    &:hover
      color:#fff
  .nav > a.active
    color: #fff
    &::after
      content:''
      position:absolute
      display:block
      height:12px
      bottom:-12px
      left:0
      right:0
      background:url(/img/topnav-pop.png) center top no-repeat

@media screen and (max-width:480px)
  #header
    .brand, .auth, .nav
      width:auto
      float:none
      position:static
      display:block
      text-align:center
      > a.active::after
        display:none

#content
  background: rgba(0,0,0,.25)
  box-shadow: 0 64px 3px -64px #000 inset, 0 -64px 3px -64px #000 inset

#sidenav
  float: left
  width: 192px
  padding: 16px 0
  a
    display:block
    color: #aaa
    text-shadow: 0 1px 1px #000
    text-decoration: none
    padding: 6px 16px
    &:hover, &.active
      color: #fff
    &.active
      color: #fff
      text-shadow: 0 0 1px #aad0de, 0 0 16px #aad0de

#main
  margin-left: 192px
  padding: 16px

#main-not-login
  padding: 16px

@media screen and (max-width:768px)
  #sidenav
    float:none
    text-align:center
    width: auto
    a
      display:inline-block
  #main
    margin-left:0

#footer
  font-size:12px
  padding: 0 16px
  color: #aaa
  text-shadow: 0 1px 1px #000
  a
    color: #eee
    text-decoration:none

